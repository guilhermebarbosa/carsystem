<div class="veiculos">
<% @x = 1 %>
<% @cars.each do |car| %>
  <% if @x == 4 %>
    <% @car_css = "2" %>
    <% @x = 1 %>
  <% else %>
    <% @car_css = "1" %>
  <% end %>
  <div class="veiculo<%=@car_css%>">
    <p class="image">
      <% if car.attachments.empty? %>
        <%= image_tag("sem_imagem.jpg") %>
      <% else %>
        <%= link_to image_tag(car.attachments[0].url(:thumb)), car %>
      <% end %>
    </p>
    <p class="text">
      <span><%= link_to car.name, car %></span>
      Ano: <%= car.year %><br>
      Pre√ßo: <%= number_to_currency(car.price, :unit => "R$ ", :separator => ",", :delimiter => ".") %><br>
    </p>
  </div>
  <% @x = @x + 1 %>
<% end %>
</div>